<%= form_tag("/users", method: "post") do %>
  Username: <%= text_field(:user, :username) %><br/>
  Email: <%= text_field(:user, :email) %><br/>
  Password: <%= password_field(:user, :password) %><br/>
  <%= submit_tag("Submit") %>
<% end %>
